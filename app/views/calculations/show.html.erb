<!-- Histogram Data (for JavaScript charting) -->
<script>
  // Prepare histogram data
  const costHistogram = <%= raw @monte_carlo.cost_per_part_histogram(bins: 50).to_json %>;
  const npvHistogram = <%= raw @monte_carlo.npv_histogram(bins: 50).to_json %>;
  <% if @monte_carlo.irr_mean %>
