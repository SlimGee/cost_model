<div class="space-y-6">
  <!-- Header with Back Button -->
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Cost & Sustainability Analysis</h2>
      <p class="text-gray-600 mt-1">Part:
        <%= @slicing_data.part_name %></p>
    </div>
    <%= link_to "← New Analysis",
    root_path,
    class:
      "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
  </div>
  <!-- Key Metrics Dashboard -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <div
      class="
        bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg p-6 text-white shadow-lg
      "
    >
      <p class="text-blue-100 text-sm mb-1">Cost per Part</p>
      <p class="text-3xl font-bold">
        <%= @calculator.total_cost_per_part.to_money('zar').format %></p>
      <p class="text-blue-100 text-xs mt-2">Total Build: 
        <%= @calculator.total_cost_per_build.to_money('zar').format %></p>
    </div>

    <div
      class="
        bg-gradient-to-br from-green-500 to-green-600 rounded-lg p-6 text-white
        shadow-lg
      "
    >
      <p class="text-green-100 text-sm mb-1">Energy Consumption</p>
      <p class="text-3xl font-bold"><%= number_with_precision(@calculator.energy_consumption, precision: 2) %></p>
      <p class="text-green-100 text-xs mt-2">kWh per build</p>
    </div>

    <div
      class="
        bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg p-6 text-white
        shadow-lg
      "
    >
      <p class="text-purple-100 text-sm mb-1">Carbon Footprint</p>
      <p class="text-3xl font-bold"><%= number_with_precision(@calculator.total_carbon_footprint, precision: 2) %></p>
      <p class="text-purple-100 text-xs mt-2">kg CO₂e per build</p>
    </div>

    <div
      class="
        bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg p-6 text-white
        shadow-lg
      "
    >
      <p class="text-orange-100 text-sm mb-1">Build Time</p>
      <p class="text-3xl font-bold"><%= number_with_precision(@slicing_data.build_time_hours, precision: 2) %></p>
      <p class="text-orange-100 text-xs mt-2">hours</p>
    </div>
  </div>
  <!-- Investment Viability Dashboard -->
  <div
    class="
      bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg p-6 text-white
      shadow-lg
    "
  >
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xl font-bold">Investment Viability Analysis</h3>
      <div class="text-right">
        <div class="text-3xl font-bold"><%= @financial_analyzer.viability_score %>/100</div>
        <div class="text-sm text-indigo-100"><%= @financial_analyzer.viability_rating %></div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-4">
      <div class="bg-white/10 backdrop-blur rounded-lg p-4">
        <p class="text-indigo-100 text-xs mb-1">Net Present Value</p>
        <p class="text-2xl font-bold">
          <%= @financial_analyzer.npv_positive? ? "+" : "" %>R
          <%= number_to_human(@financial_analyzer.net_present_value, precision: 2) %>
        </p>
        <p class="text-indigo-100 text-xs mt-2">
          <%= @financial_analyzer.npv_positive? ? "✓ Positive" : "✗ Negative" %>
        </p>
      </div>

      <div class="bg-white/10 backdrop-blur rounded-lg p-4">
        <p class="text-indigo-100 text-xs mb-1">Internal Rate of Return</p>
        <p class="text-2xl font-bold">
          <%= number_with_precision(@financial_analyzer.internal_rate_of_return, precision: 1) %>%
        </p>
        <p class="text-indigo-100 text-xs mt-2">
          vs
          <%= @params.discount_rate * 100 %>% discount rate
        </p>
      </div>

      <div class="bg-white/10 backdrop-blur rounded-lg p-4">
        <p class="text-indigo-100 text-xs mb-1">Return on Investment</p>
        <p class="text-2xl font-bold">
          <%= number_with_precision(@financial_analyzer.return_on_investment, precision: 1) %>%
        </p>
        <p class="text-indigo-100 text-xs mt-2">
          Over
          <%= @params.analysis_horizon_years %>
          years
        </p>
      </div>

      <div class="bg-white/10 backdrop-blur rounded-lg p-4">
        <p class="text-indigo-100 text-xs mb-1">Payback Period</p>
        <p class="text-2xl font-bold">
          <%= number_with_precision(@financial_analyzer.payback_period_years, precision: 1) %>
        </p>
        <p class="text-indigo-100 text-xs mt-2">
          years
          <%= @financial_analyzer.payback_within_horizon? ? "✓" : "✗" %>
        </p>
      </div>
    </div>
  </div>
  <!-- Financial Performance Metrics -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Revenue & Profitability -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <span class="w-3 h-3 bg-emerald-500 rounded-full mr-2"></span>
        Revenue & Profitability
      </h3>

      <dl class="space-y-3">
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Price per Part</dt>
          <dd class="text-sm font-semibold text-gray-900">
            R
            <%= number_with_precision(@financial_analyzer.revenue_per_part, precision: 2) %>
          </dd>
        </div>

        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Cost per Part</dt>
          <dd class="text-sm font-semibold text-gray-900">
            R
            <%= number_with_precision(@calculator.total_cost_per_part, precision: 2) %>
          </dd>
        </div>

        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Profit per Part</dt>
          <dd
            class="
              text-sm font-semibold <%= @financial_analyzer.profit_per_part > 0 ? 'text-green-600' : 'text-red-600' %>
            "
          >
            R
            <%= number_with_precision(@financial_analyzer.profit_per_part, precision: 2) %>
          </dd>
        </div>

        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Profit Margin</dt>
          <dd
            class="
              text-sm font-semibold <%= @financial_analyzer.profit_margin_percentage > 0 ? 'text-green-600' : 'text-red-600' %>
            "
          >
            <%= number_with_precision(
              @financial_analyzer.profit_margin_percentage,
              precision: 1,
            ) %>%
          </dd>
        </div>

        <div class="flex justify-between py-2 bg-emerald-50 -mx-2 px-2 rounded">
          <dt class="text-sm font-bold text-gray-900">Revenue per Build</dt>
          <dd class="text-sm font-bold text-emerald-600">
            R
            <%= number_with_precision(@financial_analyzer.revenue_per_build, precision: 2) %>
          </dd>
        </div>
      </dl>
    </div>
    <!-- Annual Projections -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <span class="w-3 h-3 bg-blue-500 rounded-full mr-2"></span>
        Annual Projections
      </h3>

      <dl class="space-y-3">
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Builds per Year</dt>
          <dd class="text-sm font-semibold text-gray-900">
            <%= @financial_analyzer.builds_per_year %>
          </dd>
        </div>

        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Parts per Year</dt>
          <dd class="text-sm font-semibold text-gray-900">
            <%= @financial_analyzer.builds_per_year * @slicing_data.parts_per_build %>
          </dd>
        </div>

        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Annual Revenue</dt>
          <dd class="text-sm font-semibold text-gray-900">
            R
            <%= number_to_human(@financial_analyzer.annual_revenue, precision: 2) %>
          </dd>
        </div>

        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Annual Costs</dt>
          <dd class="text-sm font-semibold text-gray-900">
            R
            <%= number_to_human(@financial_analyzer.annual_costs, precision: 2) %>
          </dd>
        </div>

        <div class="flex justify-between py-2 bg-blue-50 -mx-2 px-2 rounded">
          <dt class="text-sm font-bold text-gray-900">Annual Profit</dt>
          <dd
            class="text-sm font-bold <%= @financial_analyzer.annual_profit > 0 ? 'text-blue-600' : 'text-red-600' %>"
          >
            R
            <%= number_to_human(@financial_analyzer.annual_profit, precision: 2) %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
  <!-- Cash Flow Timeline -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Projected Cash Flows</h3>

    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b-2 border-gray-300">
            <th class="text-left py-2 px-3 font-semibold text-gray-900">Year</th>
            <th class="text-right py-2 px-3 font-semibold text-gray-900">Revenue</th>
            <th class="text-right py-2 px-3 font-semibold text-gray-900">Costs</th>
            <th class="text-right py-2 px-3 font-semibold text-gray-900">Net Cash Flow</th>
            <th class="text-right py-2 px-3 font-semibold text-gray-900">Cumulative</th>
          </tr>
        </thead>
        <tbody>
          <% @financial_analyzer.cash_flows.each do |flow| %>
            <tr
              class="
                border-b border-gray-100 <%= flow[:cumulative_cash_flow] >= 0 ? 'bg-green-50' : '' %>
              "
            >
              <td class="py-2 px-3 font-medium">
                <%= flow[:year] == 0 ? "Initial" : "Year #{flow[:year]}" %>
              </td>
              <td class="text-right py-2 px-3">
                R
                <%= number_to_human(flow[:revenue], precision: 2) %>
              </td>
              <td class="text-right py-2 px-3">
                R
                <%= number_to_human(flow[:costs], precision: 2) %>
              </td>
              <td
                class="
                  text-right py-2 px-3 font-semibold <%= flow[:net_cash_flow] >= 0 ? 'text-green-600' : 'text-red-600' %>
                "
              >
                <%= flow[:net_cash_flow] >= 0 ? "+" : "" %>R
                <%= number_to_human(flow[:net_cash_flow], precision: 2) %>
              </td>
              <td
                class="
                  text-right py-2 px-3 font-semibold <%= flow[:cumulative_cash_flow] >= 0 ? 'text-green-600' : 'text-red-600' %>
                "
              >
                <%= flow[:cumulative_cash_flow] >= 0 ? "+" : "" %>R
                <%= number_to_human(flow[:cumulative_cash_flow], precision: 2) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-4 p-4 bg-gray-50 rounded-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-700">Investment Decision</p>
          <p class="text-xs text-gray-500 mt-1">
            Based on NPV, ROI, and Payback Period analysis
          </p>
        </div>
        <div class="text-right">
          <% if @financial_analyzer.investment_viable? %>
            <div
              class="
                inline-flex items-center px-4 py-2 bg-green-100 text-green-800 rounded-lg
              "
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
              <span class="font-semibold">Viable Investment</span>
            </div>
          <% else %>
            <div
              class="
                inline-flex items-center px-4 py-2 bg-red-100 text-red-800 rounded-lg
              "
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                  clip-rule="evenodd"
                />
              </svg>
              <span class="font-semibold">Not Viable</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>


