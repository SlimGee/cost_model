<!-- Monte Carlo Simulation Results -->
<div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-lg p-6 text-white shadow-lg">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-xl font-bold">Monte Carlo Risk Analysis</h3>
    <div class="text-sm bg-white/10 backdrop-blur px-3 py-1 rounded">
      <%= number_with_delimiter(@monte_carlo.iterations) %> iterations
    </div>
  </div>
  
  <p class="text-slate-300 text-sm mb-6">
    Probabilistic analysis accounting for cost volatility (<%= number_to_percentage(@params.cost_volatility * 100, precision: 1) %>)
    and revenue volatility (<%= number_to_percentage(@params.revenue_volatility * 100, precision: 1) %>)
  </p>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="bg-white/10 backdrop-blur rounded-lg p-4">
      <p class="text-slate-300 text-xs mb-1">Cost per Part (Mean)</p>
      <p class="text-2xl font-bold">R <%= number_with_precision(@monte_carlo.cost_per_part_mean, precision: 2) %></p>
      <p class="text-slate-400 text-xs mt-2">
        ± R <%= number_with_precision(@monte_carlo.cost_per_part_std, precision: 2) %>
      </p>
    </div>
    
    <div class="bg-white/10 backdrop-blur rounded-lg p-4">
      <p class="text-slate-300 text-xs mb-1">NPV (Mean)</p>
      <p class="text-2xl font-bold">R <%= number_to_human(@monte_carlo.npv_mean, precision: 2) %></p>
      <p class="text-slate-400 text-xs mt-2">
        <%= number_with_precision(@monte_carlo.npv_positive_probability, precision: 1) %>% positive
      </p>
    </div>
    
    <div class="bg-white/10 backdrop-blur rounded-lg p-4">
      <p class="text-slate-300 text-xs mb-1">IRR (Mean)</p>
      <p class="text-2xl font-bold">
        <%= @monte_carlo.irr_mean ? "#{number_with_precision(@monte_carlo.irr_mean, precision: 1)}%" : "N/A" %>
      </p>
      <p class="text-slate-400 text-xs mt-2">
        <%= @monte_carlo.irr_mean ? "± #{number_with_precision(@monte_carlo.irr_std, precision: 1)}%" : "—" %>
      </p>
    </div>
    
    <div class="bg-white/10 backdrop-blur rounded-lg p-4">
      <p class="text-slate-300 text-xs mb-1">ROI (Mean)</p>
      <p class="text-2xl font-bold"><%= number_with_precision(@monte_carlo.roi_mean, precision: 1) %>%</p>
      <p class="text-slate-400 text-xs mt-2">
        ± <%= number_with_precision(@monte_carlo.roi_std, precision: 1) %>%
      </p>
    </div>
  </div>
</div>

<!-- Simulation Summary Statistics -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Simulation Summary Statistics</h3>
  
  <div class="overflow-x-auto">
    <table class="w-full text-sm">
      <thead>
        <tr class="border-b-2 border-gray-300">
          <th class="text-left py-2 px-3 font-semibold text-gray-900">Metric</th>
          <th class="text-right py-2 px-3 font-semibold text-gray-900">Mean</th>
          <th class="text-right py-2 px-3 font-semibold text-gray-900">Std Dev</th>
          <th class="text-right py-2 px-3 font-semibold text-gray-900">5th %ile</th>
          <th class="text-right py-2 px-3 font-semibold text-gray-900">50th %ile</th>
          <th class="text-right py-2 px-3 font-semibold text-gray-900">95th %ile</th>
          <th class="text-right py-2 px-3 font-semibold text-gray-900">Min</th>
          <th class="text-right py-2 px-3 font-semibold text-gray-900">Max</th>
        </tr>
      </thead>
      <tbody>
        <% stats = @monte_carlo.summary_statistics %>
        
        <!-- Cost per Part -->
        <tr class="border-b border-gray-100 bg-blue-50">
          <td class="py-2 px-3 font-medium">Cost per Part (R)</td>
          <td class="text-right py-2 px-3"><%= number_with_precision(stats[:cost_per_part][:mean], precision: 2) %></td>
          <td class="text-right py-2 px-3"><%= number_with_precision(stats[:cost_per_part][:std], precision: 2) %></td>
          <td class="text-right py-2 px-3"><%= number_with_precision(stats[:cost_per_part][:p5], precision: 2) %></td>
          <td class="text-right py-2 px-3 font-semibold"><%= number_with_precision(stats[:cost_per_part][:p50], precision: 2) %></td>
          <td class="text-right py-2 px-3"><%= number_with_precision(stats[:cost_per_part][:p95], precision: 2) %></td>
          <td class="text-right py-2 px-3 text-gray-500"><%= number_with_precision(stats[:cost_per_part][:min], precision: 2) %></td>
          <td class="text-right py-2 px-3 text-gray-500"><%= number_with_precision(stats[:cost_per_part][:max], precision: 2) %></td>
        </tr>
        
        <!-- NPV -->
        <tr class="border-b border-gray-100 bg-green-50">
          <td class="py-2 px-3 font-medium">NPV (R)</td>
          <td class="text-right py-2 px-3"><%= number_to_human(stats[:npv][:mean], precision: 2) %></td>
          <td class="text-right py-2 px-3"><%= number_to_human(stats[:npv][:std], precision: 2) %></td>
          <td class="text-right py-2 px-3"><%= number_to_human(stats[:npv][:p5], precision: 2) %></td>
          <td class="text-right py-2 px-3 font-semibold"><%= number_to_human(stats[:npv][:p50], precision: 2) %></td>
          <td class="text-right py-2 px-3"><%= number_to_human(stats[:npv][:p95], precision: 2) %></td>
          <td class="text-right py-2 px-3 text-gray-500"><%= number_to_human(stats[:npv][:min], precision: 2) %></td>
          <td class="text-right py-2 px-3 text-gray-500"><%= number_to_human(stats[:npv][:max], precision: 2) %></td>
        </tr>
        
        <!-- IRR -->
        <% if stats[:irr][:mean] %>
          <tr class="border-b border-gray-100 bg-purple-50">
            <td class="py-2 px-3 font-medium">IRR (%)</td>
            <td class="text-right py-2 px-3"><%= number_with_precision(stats[:irr][:mean], precision: 1) %></td>
            <td class="text-right py-2 px-3"><%= number_with_precision(stats[:irr][:std], precision: 1) %></td>
            <td class="text-right py-2 px-3"><%= number_with_precision(stats[:irr][:p5], precision: 1) %></td>
            <td class="text-right py-2 px-3 font-semibold"><%= number_with_precision(stats[:irr][:p50], precision: 1) %></td>
            <td class="text-right py-2 px-3"><%= number_with_precision(stats[:irr][:p95], precision: 1) %></td>
            <td class="text-right py-2 px-3 text-gray-500"><%= number_with_precision(stats[:irr][:min], precision: 1) %></td>
            <td class="text-right py-2 px-3 text-gray-500"><%= number_with_precision(stats[:irr][:max], precision: 1) %></td>
          </tr>
        <% end %>
        
        <!-- ROI -->
        <tr class="border-b border-gray-100 bg-yellow-50">
          <td class="py-2 px-3 font-medium">ROI (%)</td>
          <td class="text-right py-2 px-3"><%= number_with_precision(stats[:roi][:mean], precision: 1) %></td>
          <td class="text-right py-2 px-3"><%= number_with_precision(stats[:roi][:std], precision: 1) %></td>
          <td class="text-right py-2 px-3"><%= number_with_precision(stats[:roi][:p5], precision: 1) %></td>
          <td class="text-right py-2 px-3 font-semibold"><%= number_with_precision(stats[:roi][:p50], precision: 1) %></td>
          <td class="text-right py-2 px-3"><%= number_with_precision(stats[:roi][:p95], precision: 1) %></td>
          <td class="text-right py-2 px-3 text-gray-500"><%= number_with_precision(stats[:roi][:min], precision: 1) %></td>
          <td class="text-right py-2 px-3 text-gray-500"><%= number_with_precision(stats[:roi][:max], precision: 1) %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="mt-4 p-4 bg-blue-50 rounded-lg">
    <p class="text-sm text-blue-900">
      <strong>Interpretation:</strong> The 50th percentile (median) represents the most likely outcome. 
      The 5th-95th percentile range captures 90% of possible scenarios based on the specified volatility assumptions.
    </p>
  </div>
</div>

<!-- Distribution Histograms -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Cost per Part Distribution -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Cost per Part Distribution</h3>
    <div id="cost-histogram" class="h-64"></div>
    <div class="mt-4 text-sm text-gray-600">
      <p><strong>Mean:</strong> R <%= number_with_precision(@monte_carlo.cost_per_part_mean, precision: 2) %></p>
      <p><strong>Range:</strong> R <%= number_with_precision(@monte_carlo.cost_per_part_min, precision: 2) %> - 
         R <%= number_with_precision(@monte_carlo.cost_per_part_max, precision: 2) %></p>
    </div>
  </div>
  
  <!-- NPV Distribution -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Net Present Value Distribution</h3>
    <div id="npv-histogram" class="h-64"></div>
