  <% end %>
  const roiHistogram = <%= raw @monte_carlo.roi_histogram(bins: 50).to_json %>;
  
  // Simple histogram rendering using CSS
  function renderHistogram(containerId, data, color) {
    const container = document.getElementById(containerId);
    if (!container) return;
    
    const maxFreq = Math.max(...data.frequencies);
    let html = '<div class="flex items-end justify-between h-full gap-0.5">';
    
    data.frequencies.forEach((freq, i) => {
      const height = (freq / maxFreq * 100);
      html += `<div class="flex-1 bg-${color}-500 rounded-t" style="height: ${height}%;" title="${Math.round(data.bin_centers[i])}: ${freq}"></div>`;
    });
    
    html += '</div>';
    container.innerHTML = html;
  }
  
  // Render all histograms
  document.addEventListener('turbo:load', function() {
    renderHistogram('cost-histogram', costHistogram, 'blue');
    renderHistogram('npv-histogram', npvHistogram, 'green');
    <% if @monte_carlo.irr_mean %>
      renderHistogram('irr-histogram', irrHistogram, 'purple');
    <% end %>
    renderHistogram('roi-histogram', roiHistogram, 'yellow');
  });
