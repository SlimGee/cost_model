<%= form_with(model: material, class: "contents") do |form| %>
  <% if material.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(material.errors.count, "error") %> prohibited this material from being saved:</h2>

      <ul class="list-disc ml-6">
        <% material.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :code %>
    <%= form.text_field :code, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": material.errors[:code].none?, "border-red-400 focus:outline-red-600": material.errors[:code].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :density %>
    <%= form.text_field :density, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": material.errors[:density].none?, "border-red-400 focus:outline-red-600": material.errors[:density].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :embodied_carbon %>
    <%= form.text_field :embodied_carbon, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": material.errors[:embodied_carbon].none?, "border-red-400 focus:outline-red-600": material.errors[:embodied_carbon].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": material.errors[:name].none?, "border-red-400 focus:outline-red-600": material.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :raw_material_price %>
    <%= form.text_field :raw_material_price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": material.errors[:raw_material_price].none?, "border-red-400 focus:outline-red-600": material.errors[:raw_material_price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :recycling_efficiency %>
    <%= form.text_field :recycling_efficiency, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": material.errors[:recycling_efficiency].none?, "border-red-400 focus:outline-red-600": material.errors[:recycling_efficiency].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
