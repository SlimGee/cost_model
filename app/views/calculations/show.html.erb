<div class="space-y-6">
  <!-- Header with Back Button -->
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Cost & Sustainability Analysis</h2>
      <p class="text-gray-600 mt-1">Part:
        <%= @slicing_data.part_name %></p>
    </div>
    <%= link_to "← New Analysis",
    root_path,
    class:
      "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
  </div>
  <!-- Key Metrics Dashboard -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <div
      class="
        bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg p-6 text-white shadow-lg
      "
    >
      <p class="text-blue-100 text-sm mb-1">Cost per Part</p>
      <p class="text-3xl font-bold">R
        <%= number_with_precision(@calculator.total_cost_per_part, precision: 2) %></p>
      <p class="text-blue-100 text-xs mt-2">Total Build: R
        <%= number_with_precision(@calculator.total_cost_per_build, precision: 2) %></p>
    </div>

    <div
      class="
        bg-gradient-to-br from-green-500 to-green-600 rounded-lg p-6 text-white
        shadow-lg
      "
    >
      <p class="text-green-100 text-sm mb-1">Energy Consumption</p>
      <p class="text-3xl font-bold"><%= number_with_precision(@calculator.energy_consumption, precision: 2) %></p>
      <p class="text-green-100 text-xs mt-2">kWh per build</p>
    </div>

    <div
      class="
        bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg p-6 text-white
        shadow-lg
      "
    >
      <p class="text-purple-100 text-sm mb-1">Carbon Footprint</p>
      <p class="text-3xl font-bold"><%= number_with_precision(@calculator.total_carbon_footprint, precision: 2) %></p>
      <p class="text-purple-100 text-xs mt-2">kg CO₂e per build</p>
    </div>

    <div
      class="
        bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg p-6 text-white
        shadow-lg
      "
    >
      <p class="text-orange-100 text-sm mb-1">Build Time</p>
      <p class="text-3xl font-bold"><%= number_with_precision(@slicing_data.build_time_hours, precision: 2) %></p>
      <p class="text-orange-100 text-xs mt-2">hours</p>
    </div>
  </div>
  <!-- Cost Breakdown -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Cost Breakdown per Build</h3>

    <div class="space-y-3">
      <% @calculator.cost_breakdown.each do |category, amount| %>
        <% percentage = @calculator.cost_breakdown_percentages[category] %>
        <div>
          <div class="flex justify-between items-center mb-1">
            <span class="text-sm font-medium text-gray-700 capitalize"><%= category %></span>
            <div class="text-right">
              <span class="text-sm font-bold text-gray-900">R
                <%= number_with_precision(amount, precision: 2) %></span>
              <span class="text-xs text-gray-500 ml-2">(<%= percentage %>%)</span>
            </div>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div
              class="bg-blue-600 h-2 rounded-full transition-all duration-500"
              style="width: <%= percentage %>%"
            ></div>
          </div>
        </div>
      <% end %>

      <div class="pt-3 border-t-2 border-gray-300">
        <div class="flex justify-between items-center">
          <span class="text-base font-bold text-gray-900">Total per Build</span>
          <span class="text-base font-bold text-gray-900">R
            <%= number_with_precision(@calculator.total_cost_per_build, precision: 2) %></span>
        </div>
        <div class="flex justify-between items-center mt-1">
          <span class="text-sm text-gray-600">Cost per Part (<%= @slicing_data.parts_per_build %>
            parts)</span>
          <span class="text-sm font-semibold text-blue-600">R
            <%= number_with_precision(@calculator.total_cost_per_part, precision: 2) %></span>
        </div>
      </div>
    </div>
  </div>
  <!-- Detailed Cost Components -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Material Costs -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <span class="w-3 h-3 bg-green-500 rounded-full mr-2"></span>
        Material & Consumables
      </h3>

      <dl class="space-y-3">
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Powder Cost</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= number_with_precision(@calculator.powder_cost, precision: 2) %></dd>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Inert Gas</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= number_with_precision(@calculator.gas_cost, precision: 2) %></dd>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Waste Disposal</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= number_with_precision(@calculator.waste_cost, precision: 2) %></dd>
        </div>
        <div class="flex justify-between py-2 bg-green-50 -mx-2 px-2 rounded">
          <dt class="text-sm font-bold text-gray-900">Total Consumables</dt>
          <dd class="text-sm font-bold text-green-600">R
            <%= number_with_precision(@calculator.consumables_cost, precision: 2) %></dd>
        </div>
      </dl>
    </div>
    <!-- Labor & Time Costs -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <span class="w-3 h-3 bg-blue-500 rounded-full mr-2"></span>
        Labor & Operations
      </h3>

      <dl class="space-y-3">
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Setup Cost</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= number_with_precision(@calculator.setup_cost, precision: 2) %></dd>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Operator Time (<%= number_with_precision(@calculator.operator_time, precision: 1) %>h)</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= number_with_precision(@calculator.labor_cost_per_build, precision: 2) %></dd>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Labor Rate</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= @params.labor_rate %>/hr</dd>
        </div>
        <div class="flex justify-between py-2 bg-blue-50 -mx-2 px-2 rounded">
          <dt class="text-sm font-bold text-gray-900">Total Labor</dt>
          <dd class="text-sm font-bold text-blue-600">R
            <%= number_with_precision(
              @calculator.labor_cost_per_build + @calculator.setup_cost,
              precision: 2,
            ) %></dd>
        </div>
      </dl>
    </div>
    <!-- Energy Costs -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <span class="w-3 h-3 bg-yellow-500 rounded-full mr-2"></span>
        Energy Consumption
      </h3>

      <dl class="space-y-3">
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Energy Consumed</dt>
          <dd class="text-sm font-semibold text-gray-900"><%= number_with_precision(@calculator.energy_consumption, precision: 2) %>
            kWh</dd>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Electricity Rate</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= @params.electricity_rate %>/kWh</dd>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Efficiency</dt>
          <dd class="text-sm font-semibold text-gray-900"><%= number_with_precision(@calculator.energy_efficiency_per_kg, precision: 2) %>
            kWh/kg</dd>
        </div>
        <div class="flex justify-between py-2 bg-yellow-50 -mx-2 px-2 rounded">
          <dt class="text-sm font-bold text-gray-900">Total Energy Cost</dt>
          <dd class="text-sm font-bold text-yellow-600">R
            <%= number_with_precision(@calculator.energy_cost, precision: 2) %></dd>
        </div>
      </dl>
    </div>
    <!-- Equipment & Overhead -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <span class="w-3 h-3 bg-purple-500 rounded-full mr-2"></span>
        Equipment & Overhead
      </h3>

      <dl class="space-y-3">
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Machine Cost</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= number_with_precision(@calculator.equipment_cost_per_build, precision: 2) %></dd>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Facility Overhead</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= number_with_precision(@calculator.facility_cost_per_build, precision: 2) %></dd>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Digital Infrastructure</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= number_with_precision(@calculator.digital_cost_per_build, precision: 2) %></dd>
        </div>
        <div class="flex justify-between py-2 border-b border-gray-100">
          <dt class="text-sm text-gray-600">Maintenance</dt>
          <dd class="text-sm font-semibold text-gray-900">R
            <%= number_with_precision(@calculator.maintenance_cost_per_build, precision: 2) %></dd>
        </div>
        <div class="flex justify-between py-2 bg-purple-50 -mx-2 px-2 rounded">
          <dt class="text-sm font-bold text-gray-900">Total Overhead</dt>
          <dd class="text-sm font-bold text-purple-600">
            R
            <%= number_with_precision(
              @calculator.equipment_cost_per_build + @calculator.facility_cost_per_build +
                @calculator.digital_cost_per_build + @calculator.maintenance_cost_per_build,
              precision: 2,
            ) %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
  <!-- Sustainability Metrics -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Environmental Impact Assessment</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="text-center p-4 bg-green-50 rounded-lg border border-green-200">
        <p class="text-sm text-gray-600 mb-1">Material Utilization</p>
        <p class="text-2xl font-bold text-green-600">
          <%= number_to_percentage(@slicing_data.material_utilization * 100, precision: 1) %>
        </p>
      </div>

      <div class="text-center p-4 bg-blue-50 rounded-lg border border-blue-200">
        <p class="text-sm text-gray-600 mb-1">Recycling Efficiency</p>
        <p class="text-2xl font-bold text-blue-600">
          <%= number_to_percentage(@calculator.recycling_efficiency * 100, precision: 1) %>
        </p>
      </div>

      <div class="text-center p-4 bg-red-50 rounded-lg border border-red-200">
        <p class="text-sm text-gray-600 mb-1">Waste Ratio</p>
        <p class="text-2xl font-bold text-red-600">
          <%= number_to_percentage(@calculator.waste_ratio * 100, precision: 1) %>
        </p>
      </div>

      <div class="text-center p-4 bg-purple-50 rounded-lg border border-purple-200">
        <p class="text-sm text-gray-600 mb-1">Carbon/kg</p>
        <p class="text-2xl font-bold text-purple-600">
          <%= number_with_precision(@calculator.carbon_footprint_per_kg, precision: 2) %>
        </p>
        <p class="text-xs text-gray-500 mt-1">kg CO₂e/kg part</p>
      </div>
    </div>

    <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="p-4 bg-gray-50 rounded-lg">
        <p class="text-xs text-gray-600 mb-2">Energy Carbon Footprint</p>
        <p class="text-lg font-semibold text-gray-900">
          <%= number_with_precision(@calculator.carbon_footprint_energy, precision: 2) %>
          kg CO₂e
        </p>
      </div>

      <div class="p-4 bg-gray-50 rounded-lg">
        <p class="text-xs text-gray-600 mb-2">Material Carbon Footprint</p>
        <p class="text-lg font-semibold text-gray-900">
          <%= number_with_precision(@calculator.carbon_footprint_material, precision: 2) %>
          kg CO₂e
        </p>
      </div>

      <div class="p-4 bg-gray-50 rounded-lg">
        <p class="text-xs text-gray-600 mb-2">Digital Carbon Footprint</p>
        <p class="text-lg font-semibold text-gray-900">
          <%= number_with_precision(@calculator.carbon_footprint_digital, precision: 2) %>
          kg CO₂e
        </p>
      </div>
    </div>
  </div>
  <!-- Material Flow -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Powder Material Flow</h3>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="p-4 bg-blue-50 rounded-lg text-center">
        <p class="text-xs text-gray-600 mb-1">Total Powder</p>
        <p class="text-xl font-bold text-blue-600">
          <%= number_with_precision(@slicing_data.total_powder_mass, precision: 3) %>
          kg
        </p>
      </div>

      <div class="p-4 bg-green-50 rounded-lg text-center">
        <p class="text-xs text-gray-600 mb-1">Used in Part</p>
        <p class="text-xl font-bold text-green-600">
          <%= number_with_precision(@slicing_data.part_mass, precision: 3) %>
          kg
        </p>
      </div>

      <div class="p-4 bg-yellow-50 rounded-lg text-center">
        <p class="text-xs text-gray-600 mb-1">Recycled</p>
        <p class="text-xl font-bold text-yellow-600">
          <%= number_with_precision(@calculator.recycled_powder_mass, precision: 3) %>
          kg
        </p>
      </div>

      <div class="p-4 bg-red-50 rounded-lg text-center">
        <p class="text-xs text-gray-600 mb-1">Waste</p>
        <p class="text-xl font-bold text-red-600">
          <%= number_with_precision(@calculator.non_recycled_powder_mass, precision: 3) %>
          kg
        </p>
      </div>
    </div>
  </div>
  <!-- Actions -->
  <div class="flex gap-3">
    <%= link_to "← New Analysis",
    root_path,
    class:
      "px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" %>
    <button
      class="
        px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors
      "
      disabled
    >
      Export Report (Coming Soon)
    </button>
  </div>
</div>
