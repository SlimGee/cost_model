<div id="<%= dom_id material %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Code:</strong>
    <%= material.code %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Density:</strong>
    <%= material.density %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Embodied carbon:</strong>
    <%= material.embodied_carbon %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= material.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Raw material price:</strong>
    <%= material.raw_material_price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Recycling efficiency:</strong>
    <%= material.recycling_efficiency %>
  </div>
</div>
